<div class="container">
   <div class="mt-5">
      
      <div class="card">
         <div class="card-header text-center">
            <h2>Attendance Monitoring System</h2>
            <b id="chold"></b>&nbsp;<b>Campus</b>             
         </div>
         <div class="card-body">
            

            <div class="container">
               <div class="row d-flex justify-content-center">
                  <div class="col-md-12 text-center">
                     <h5 id="dholder"></h5>
                  </div>
               </div>
               <div class="row d-flex justify-content-center">
                  <form method="POST" id="attForm">
                     <div class="col-md-12">
                        <input name="idnum" id="idnum" class="form-control form-control-lg" type="text" placeholder="Student Number"   >
                     </div>
                     <input id="lib" type="hidden" name="library" >
                     <input id="sec" type="hidden" name="Section" >
                  </form>
                  <div id="sts" class="alert alert-success d-none" role="alert">
                    Login Successfully!!
                   </div>
                 
                  
               </div>
              
               <div class="row row d-flex justify-content-center mt-3 ">
                  <div class="col-md-6 text-center ">
                     <img src="/img/nopix.png" class="img-fluid img-thumbnail" alt="Responsive image"
                        style="height: 509px;">
                  </div>                 
               </div>
              
               <hr>
               <div class="row d-flex justify-content-center">
                  <div class="col-md-12 text-center">
                     <table class="table  table-bordered">
                        <thead>
                           <tr class="table-success">
                              <th scope="col">Name</th>
                              <th scope="col">ID Number</th>
                              <th scope="col">Group</th>
                              <th scope="col">Description</th>
                              <th scope="col" >Mode</th>
                              <th scope="col">Date/Time-in</th>
                              <th scope="col">Location</th>
                           </tr>
                        </thead>
                        <tbody>
                           <tr>
                              <th id="name" scope="row">-</th>
                              <td id="IDnum">-</td>
                              <td id="User_Class">-</td>
                              <td id="Degree_Course">-</td>
                              <td id="mode">-</td>
                              <td id="reg_date" >-</td>
                              <td id="Section">-</td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
               </div>

            </div>

         </div>
         <div class="card-footer">
            <div class="custom-control custom-switch float-left">
               <input type="checkbox" class="custom-control-input" id="customSwitch1">
               <label id="slabel" class="custom-control-label" for="customSwitch1">Light</label>
            </div>
         </div>
      </div>
   </div>
</div>